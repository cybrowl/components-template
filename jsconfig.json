{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "es2020",
      "lib": ["es2020", "dom"],
      "target": "es2020",
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": false,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"],
    "exclude": ["node_modules/*"]
  }
  